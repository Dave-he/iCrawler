{
  "name": "@icrawler/cli",
  "version": "1.0.0",
  "description": "Command line interface for iCrawler",
  "bin": {
    "icrawler": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "dev": "tsc-watch -p tsconfig.build.json --onCompilationComplete \"tsc-alias -p tsconfig.build.json\"",
    "clean": "rimraf dist .turbo",
    "format": "biome format --write .",
    "lint": "biome check .",
    "start": "node dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "inquirer": "^9.2.0",
    "@icrawler/core": "workspace:*",
    "@icrawler/nodes-browser": "workspace:*",
    "@icrawler/nodes-data": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/node": "*",
    "@types/inquirer": "^9.0.3",
    "rimraf": "^5.0.1",
    "tsc-alias": "^1.8.10",
    "tsc-watch": "^6.2.0",
    "typescript": "*"
  }
}